{
  "manifest_version": 3,
  "name": "Wells Fargo ZK Balance Verifier",
  "version": "1.0",
  "description": "Verifies balance exceeds threshold using ZK proofs",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://connect.secure.wellsfargo.com/*",
    "http://localhost:3000/*"
  ],
  "action": {
    "default_popup": "popup.html"
  }
}